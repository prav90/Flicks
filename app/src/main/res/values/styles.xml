<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionBarBackgound</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text Style for the feed title -->
    <style name="movieFeedFont">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="movieFeedTitle" parent="movieFeedFont">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text style for feed date and description -->
    <style name="movieFeedText" parent="movieFeedFont">
        <item name="android:textColor">#393838</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
